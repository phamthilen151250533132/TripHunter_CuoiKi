<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trip2"
    tools:context="com.example.chinhpc.triphunter.Activity_Layout.canhan.CaNhanActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackgroundBorderless">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="Khác"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/btnloginmain"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/ic_account"
            android:drawableRight="@drawable/ic_arrow_right"
            android:text="Đăng nhập"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <Button
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:text="Thêm địa điểm"
        android:drawableLeft="@drawable/ic_place"
        android:drawableRight="@drawable/ic_arrow_right"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_notifications"
        android:drawableRight="@drawable/ic_arrow_right"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:textAllCaps="false"
        android:text="Thông báo" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:text="Đánh giá ứng dụng"
        android:drawableLeft="@drawable/ic_star"
        android:drawableRight="@drawable/ic_arrow_right"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_person"
        android:drawableRight="@drawable/ic_arrow_right"
        android:orientation="horizontal"
        android:text="Tìm bạn bè"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:textAllCaps="false"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_settings"
        android:drawableRight="@drawable/ic_arrow_right"
        android:orientation="horizontal"
        android:text="Cài đặt"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:textAllCaps="false"/>
</LinearLayout>
