<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trip2"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:pointerIcon="wait"
        android:weightSum="100">

        <Button
            android:id="@+id/btn_Boqua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="120dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:text="Bỏ qua"
            android:textAllCaps="false"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TripHunter"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Khám phá địa danh trên toàn quốc"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Di chuyển - Đặt phòng - Lịch trình"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="40dp"
            android:text="Ăn uống - Vui chơi giải trí"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="50"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnlogf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3b5998"
                android:drawableLeft="@drawable/logo"
                android:paddingLeft="15dp"
                android:text="Đăng nhập bằng Facebook"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/btnlogg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#eb4026"
                android:drawableLeft="@drawable/logog"
                android:paddingLeft="15dp"
                android:text="Đăng nhập bằng Google"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#ff2a60"
                android:drawableLeft="@drawable/logotrip"
                android:paddingLeft="15dp"
                android:text="Tạo tài khoản TripHunter"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:weightSum="10">

                <Button
                    android:id="@+id/btn_coTK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="Bạn đã có tài khoản?"
                    android:textAllCaps="false"
                    android:textColor="@android:color/background_dark" />

                <Button
                    android:id="@+id/btn_Logins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="Đăng nhập"
                    android:textAllCaps="false"
                    android:textColor="#000" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>